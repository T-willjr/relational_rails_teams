<h1>Update Basketball Player Information</h1>

<%= form_with url: "/basketball_players/#{@player.id}/", method: :patch, local: true do |form| %>
  <%= form.label :name, "Name" %>
  <%= form.text_field :name %>

  <%= form.label :injured, "Injured" %>
  <%= form.text_field :injured %>

  <%= form.label :jersey_number, "Jersey Number" %>
  <%= form.text_field :jersey_number %>

  <%= form.submit "Submit" %>
<% end %>
